                    <li>
                        <a href="<?php echo $subpage->getHref() ?>">
                            <?php echo $subpage->getLabel(); ?>
                        </a> </li>
                    <?php if (!empty($subpage->pages)): ?>
                        <ul class="nav_sub">
                            <?php foreach ($subpage->pages as $subsubpage): ?>
                                <li>
                                    <a href="<?php echo $subsubpage->getHref(); ?>"><?php echo $subsubpage->getLabel(); ?></a>
                                </li>
                            <?php endforeach; ?>
                        </ul>
                    <?php endif; ?>

                </ul>

            <?php endforeach; ?>
        <?php endif; ?>
    <?php endforeach; ?>
</div>